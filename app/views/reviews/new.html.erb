<header>
	<h1>New Review for <%= link_to (@movie.title), @movie %>. </h1>
	
	<%= form_for ([@movie, @review]) do |f|%>
		<%= render "shared/errors", object: @review %>
	<fieldset>
	<ol>
		<li>
			<p><%= f.label :name %></br>
			   <%= f.text_field :name, autofocus: true%>
			</p>
			<li class ="required stars">
			   <%= f.label :stars %>
			   <% Review::STARS.each do |star| %> 
			   	<span class="star">
				   <%=f.radio_button :stars, star %> <%= star %>
			   	</span>
			   <% end %>
			</li>
			<p><%= f.label :comment %></br>
			   <%= f.text_field :comment, placeholder: "Tell us what you think."%>
			</p>
		</li>
			<p>
			<%= f.submit 'Post Review' %> | <%= link_to 'Cancel', @movie%>
		</p>
	</ol>
</fieldset>
	<% end %>