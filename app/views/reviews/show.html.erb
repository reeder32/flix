<header id="content-header">
  <h1>Editing <%= @movie.title %></h1>
</header>

	<%= form_for @review do |f|%>
		<%= render "shared/errors", object: @review %>
	<fieldset>
	<ol>
		<li>
			<p><%= f.label :name %></br>
			   <%= f.text_field :name, autofocus: true%>
			</p>
			<li class ="required stars">
			   <%= f.label :stars %>
			   <% Review::STARS.each do |star| %> 
			   	<span class="star">
				   <%=f.radio_button :stars, star %> <%= star %>
			   	</span>
			   <% end %>
			</li>
			<p><%= f.label :comment %></br>
			   <%= f.text_field :comment, placeholder: "Tell us what you think."%>
			</p>
		</li>
			<p>
			
		</p>
	</ol>
</fieldset>
	<% end %>